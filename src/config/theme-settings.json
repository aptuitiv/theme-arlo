{
    "groups": [
        {
            "name": "Banner Images",
            "description": "These settings change the size of banner images before a user loads them. This allows for faster page load times.",
            "sidebarSize": "small",
            "groups": [
                {
                    "name": "Banner images",
                    "description": "These are for the large banner that is often used on the home page and landing pages",
                    "fields": [
                        {
                            "name": "bannerImageSizes",
                            "label": "Image widths",
                            "type": "repeatingGrid",
                            "description": "The different screen widths to crop and create images for.",
                            "itemName": "Image size",
                            "children": [
                                {
                                    "name": "size",
                                    "label": "Size",
                                    "type": "ratio",
                                    "after": "px"
                                }
                            ]
                        },
                        {
                            "name": "bannerImageRatio",
                            "label": "Aspect ratio when cropping",
                            "type": "ratio",
                            "after": "px",
                            "default": "20/9",
                            "description": "If the banner image needs to be cropped, this is the aspect ratio that will be used."
                        },
                        {
                            "name": "bannerMinImageRatio",
                            "label": "Minimum aspect ratio",
                            "type": "ratio",
                            "after": "px",
                            "default": "20/9",
                            "description": "If \"How to crop the banner image\" is set to \"Do not crop the banner image unless it is too tall\", this is the aspect ratio that will be used to determine if the image is too tall."
                        },
                        {
                            "name": "bannerImageCropStrategy",
                            "label": "How to crop the banner image",
                            "type": "radio",
                            "default": "conditional",
                            "options": {
                                "crop": "Always use the above image aspect ratios to crop the image",
                                "conditional": "Do not crop the banner image unless it is too tall"
                            },
                            "description": "The banner image is considered too tall if its image ratio is less than the \"Minimum aspect ratio\" field value. (The lower the ratio the taller the image.)"
                        },
                        {
                            "name": "bannerImageCropOrientation",
                            "label": "Image crop orientation",
                            "description": "The default crop orientation for banner images when the image is too tall.",
                            "type": "radio",
                            "default": "center",
                            "options": {
                                "top": "Top",
                                "center": "Center",
                                "bottom": "Bottom"
                            }
                        }
                    ]
                },
                {
                    "name": "Banner bar images",
                    "description": "These are for the banner bar that is often used on most pages. It is typically shorter than the banner images.",
                    "fields": [
                        {
                            "name": "bannerBarImageSizes",
                            "label": "Image widths",
                            "type": "repeatingGrid",
                            "description": "The different screen widths to crop and create images for.",
                            "itemName": "Image size",
                            "children": [
                                {
                                    "name": "size",
                                    "label": "Size",
                                    "type": "ratio",
                                    "after": "px"
                                }
                            ]
                        },
                        {
                            "name": "bannerBarImageRatio",
                            "label": "Aspect ratio when cropping",
                            "type": "ratio",
                            "after": "px",
                            "default": "20/9",
                            "description": "If the banner image needs to be cropped, this is the aspect ratio that will be used."
                        },
                        {
                            "name": "bannerBarMinImageRatio",
                            "label": "Minimum aspect ratio",
                            "type": "ratio",
                            "after": "px",
                            "default": "20/9",
                            "description": "If \"How to crop the banner image\" is set to \"Do not crop the banner image unless it is too tall\", this is the aspect ratio that will be used to determine if the image is too tall."
                        },
                        {
                            "name": "bannerBarImageCropStrategy",
                            "label": "How to crop the banner image",
                            "type": "radio",
                            "default": "conditional",
                            "options": {
                                "crop": "Always use the above image aspect ratios to crop the image",
                                "conditional": "Do not crop the banner image unless it is too tall"
                            },
                            "description": "The banner image is considered too tall if its image ratio is less than the \"Minimum aspect ratio\" field value. (The lower the ratio the taller the image.)"
                        },
                        {
                            "name": "bannerBarImageCropOrientation",
                            "label": "Image crop orientation",
                            "description": "The default crop orientation for banner images when the image is too tall.",
                            "type": "radio",
                            "default": "center",
                            "options": {
                                "top": "Top",
                                "center": "Center",
                                "bottom": "Bottom"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Blocks - Full Width Image",
            "description": "These settings set the responsive sizes for the \"Full Width Image\" block.",
            "sidebarSize": "small",
            "fields": [
                {
                    "name": "blockFullWidthImageSizes",
                    "label": "Image Sizes",
                    "type": "repeatingGrid",
                    "itemName": "Image size",
                    "children": [
                        {
                            "name": "maxWidth",
                            "label": "Max width",
                            "type": "stepper",
                            "after": "px"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Footer",
            "description": "Content for the footer that is used on all pages",
            "fields": [
                {
                    "name": "footerLogo",
                    "label": "Logo",
                    "type": "image",
                    "path": "images",
                    "preview": {
                        "type": "replace",
                        "contentSelector": ".Footer-logo",
                        "template": "<img src=\"{{ url }}\" height=\"{{ imageHeight }}\" width=\"{{ imageWidth }}\" alt=\"{{ alt }}\" class=\"Footer-logo\">"
                    }
                },
                {
                    "name": "footerLogoWidth",
                    "label": "Logo width",
                    "type": "stepper",
                    "after": "px",
                    "default": "425",
                    "preview": {
                        "type": "css-head",
                        "cssVariable": "--Footer-logo-width",
                        "template": "{{ value }}px"
                    }
                },
                {
                    "name": "footerAbovePhoneContent",
                    "label": "Content to show on the right, above the phone number",
                    "type": "text"
                },
                {
                    "name": "footerAfterCopyrightContent",
                    "label": "Text to show after the copyright",
                    "type": "text"
                },
                {
                    "name": "footerShowCredit",
                    "label": "Show Aptuitiv credit",
                    "type": "switch",
                    "default": "yes"
                }
            ]
        },
        {
            "name": "Header",
            "description": "Content for the header that is used on all pages",
            "fields": [
                {
                    "name": "headerLogo",
                    "label": "Logo",
                    "type": "image",
                    "path": "images",
                    "preview": {
                        "type": "replace",
                        "contentSelector": ".Header-logo",
                        "template": "<img src=\"{{ url }}\" height=\"{{ imageHeight }}\" width=\"{{ imageWidth }}\" alt=\"{{ alt }}\" class=\"Header-logo\">"
                    }
                },
                {
                    "name": "headerLogoWidth",
                    "label": "Logo width",
                    "type": "size",
                    "default": "425px",
                    "preview": {
                        "type": "css-head",
                        "cssVariable": "--Header-logo-width"
                    }
                },
                {
                    "name": "headerPhonePrefix",
                    "label": "Text to show before the phone number",
                    "type": "text"
                },
                {
                    "name": "headerButton",
                    "label": "Button to show next to the navigation",
                    "type": "url",
                    "showLinkTextField": true,
                    "linkTextFieldLabel": "Button text"
                }
            ]
        },
        {
            "name": "Social Icons",
            "description": "Set the links and icons to use for your social networks in the footer of each page.",
            "fields": [
                {
                    "name": "social",
                    "label": "Social Networks",
                    "type": "repeatingGrid",
                    "itemName": "Social Network",
                    "children": [
                        {
                            "name": "icon",
                            "label": "Icon",
                            "type": "select",
                            "options": {
                                "facebook": "Facebook",
                                "google": "Google",
                                "instagram": "Instagram",
                                "linkedin": "LinkedIn",
                                "pinterest": "Pinterest",
                                "tiktok": "TikTok",
                                "whatsapp": "WhatsApp",
                                "x": "X (Twitter)",
                                "yelp": "Yelp",
                                "youtube": "YouTube"
                            },
                            "columnWidth": "1fr"
                        },
                        {
                            "name": "url",
                            "label": "URL to your page on this social network",
                            "type": "text",
                            "columnWidth": "2fr"
                        }
                    ]
                }
            ]
        },
        {
            "name": "Popout menu",
            "description": "These settings are for the popup menu that shows when the user clicks the hamburger icon.",
            "fields": [
                {
                    "name": "menuLogo",
                    "label": "Logo to show at the top of the menu",
                    "type": "image",
                    "path": "images",
                    "preview": {
                        "type": "replace",
                        "contentSelector": ".Menu-logo",
                        "template": "<img src=\"{{ url }}\" height=\"{{ imageHeight }}\" width=\"{{ imageWidth }}\" alt=\"{{ alt }}\" class=\"Menu-logo\">"
                    }
                },
                {
                    "name": "menuLogoWidth",
                    "label": "Logo width",
                    "type": "size",
                    "default": "425px",
                    "preview": {
                        "type": "css-head",
                        "cssVariable": "--Menu-logo-width"
                    }
                },
                {
                    "name": "menuButton",
                    "label": "Button to show below the navigation",
                    "type": "url",
                    "showLinkTextField": true,
                    "linkTextFieldLabel": "Button text"
                },
                {
                    "name": "menuPhoneText",
                    "label": "Text to show above the phone number",
                    "type": "text"
                }
            ]
        },
        {
            "name": "Popup on Load",
            "description": "Options for the optional popup that shows on page load.",
            "fields": [
                {
                    "name": "popupDisplay",
                    "label": "Display the popup",
                    "type": "switch"
                },
                {
                    "name": "popupSeconds",
                    "label": "Seconds to wait before showing the popup",
                    "type": "stepper",
                    "after": "seconds",
                    "default": "5"
                },
                {
                    "name": "popupCookieExpiration",
                    "label": "Number of days to show popup again after closing",
                    "type": "stepper",
                    "after": "days",
                    "default": "30"
                },
                {
                    "name": "popupContent",
                    "label": "Content",
                    "type": "richTextEditor"
                }
            ]
        },
        {
            "name": "Promotional Bar",
            "description": "These settings are for the promotional bar that shows at the top of the page.",
            "fields": [
                {
                    "name": "promoBarLeftContent",
                    "label": "Left content",
                    "type": "richTextEditor",
                    "preview": {
                        "type": "replace",
                        "contentSelector": ".PromoBar-left"
                    }
                },
                {
                    "name": "promoBarRightContent",
                    "label": "Right content",
                    "type": "richTextEditor",
                    "preview": {
                        "type": "replace",
                        "contentSelector": ".PromoBar-right"
                    }
                }
            ]
        }
    ]
}
